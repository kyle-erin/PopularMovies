<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.kyle.popularmovies"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MovieListActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>

        <service
            android:name=".data.GetMoviesService"
            android:exported="false"/>

        <service
            android:name=".data.GetTrailersService"
            android:exported="false"/>

        <activity
            android:name=".activities.MovieInfoActivity"
            android:label="@string/title_activity_movie_info"
            android:parentActivityName=".activities.MovieListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MovieListActivity" />
        </activity>
    </application>

</manifest>
